		</dependency>
	</dependencies>
	
	<build>
		<plugins>
		<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<includes>
						<include>org.highmed.pseudonymization.test.TestSuiteAll</include>
