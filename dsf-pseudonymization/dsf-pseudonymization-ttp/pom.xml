		<artifactId>dsf-pseudonymization-pom</artifactId>
		<version>0.6.0-RC1</version>
	</parent>
	
	<properties>
		<main.basedir>${project.basedir}/../..</main.basedir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.highmed.dsf</groupId>
			<artifactId>dsf-pseudonymization-base</artifactId>
		</dependency>
		<dependency>
			<groupId>org.highmed.dsf</groupId>
